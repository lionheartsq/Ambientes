{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Elemento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idelemento</th>
                <th>Marca</th>
                <th>Serial</th>
                <th>Observaciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('elemento_show', { 'id': entity.idElemento }) }}">{{ entity.idElemento }}</a></td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.serial }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('elemento_show', { 'id': entity.idElemento }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('elemento_edit', { 'id': entity.idElemento }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('elemento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
